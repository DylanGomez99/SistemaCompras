        <div class="col-md-3">
            <a class="btn btn-primary btn-lg w-100 shadow" asp-controller="UnidadMedidas" asp-action="Index">
                Unidades de Medida
            </a>
        </div>

        <div class="col-md-3">
            <a class="btn btn-primary btn-lg w-100 shadow" asp-controller="Marcas" asp-action="Index">
